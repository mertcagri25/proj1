@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mt-4">Gösterge Paneli</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Gösterge Paneli</li>
</ol>

<div class="row">
    <div class="col-xl-3 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <div class="h3 mb-0">Kategoriler</div>
                    <div class="small">İçerik Yönetimi</div>
                </div>
                <i class="fas fa-layer-group fa-2x opacity-50"></i>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" asp-controller="Category" asp-action="Index">Detayları Gör</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <div class="h3 mb-0">Haberler</div>
                    <div class="small">İçerik Yönetimi</div>
                </div>
                <i class="fas fa-newspaper fa-2x opacity-50"></i>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" asp-controller="News" asp-action="Index">Detayları Gör</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <div class="h3 mb-0">Kullanıcılar</div>
                    <div class="small">Sistem Yönetimi</div>
                </div>
                <i class="fas fa-users fa-2x opacity-50"></i>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" asp-controller="User" asp-action="Index">Detayları Gör</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-danger text-white mb-4">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <div class="h3 mb-0">Ayarlar</div>
                    <div class="small">Sistem Yapılandırması</div>
                </div>
                <i class="fas fa-cogs fa-2x opacity-50"></i>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" href="#">Detayları Gör</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
</div>
