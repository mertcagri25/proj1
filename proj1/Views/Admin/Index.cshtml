@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <div>
            <h1 class="fw-bold text-dark">Gösterge Paneli</h1>
            <p class="text-muted mb-0">Sistemin genel durumuna buradan göz atabilirsiniz.</p>
        </div>
        <div class="d-none d-md-block">
            <span class="badge bg-light text-dark border p-2">
                <i class="far fa-calendar-alt me-1"></i> @DateTime.Now.ToString("dd MMMM yyyy dddd")
            </span>
        </div>
    </div>

    <!-- Welcome Banner -->
    <div class="alert alert-primary border-0 shadow-sm d-flex align-items-center" role="alert">
        <div class="me-3">
            <div class="bg-white p-2 rounded-circle text-primary">
                <i class="fas fa-user-shield fa-2x"></i>
            </div>
        </div>
        <div>
            <h5 class="alert-heading fw-bold mb-1">Hoş Geldiniz, @User.Identity?.Name!</h5>
            <p class="mb-0 small">Yönetim paneline başarıyla giriş yaptınız. Bekleyen işlerinizi aşağıdan takip edebilirsiniz.</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <!-- Categories Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card bg-white text-dark h-100 shadow-sm border-0 border-start border-5 border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-uppercase fw-bold text-primary small mb-1">Kategoriler</div>
                            <div class="h2 mb-0 fw-bold">@ViewBag.TotalCategories</div>
                            <div class="small text-muted mt-1">
                                <i class="fas fa-check text-success me-1"></i>@ViewBag.ActiveCategories Aktif
                            </div>
                        </div>
                        <div class="text-primary opacity-25">
                            <i class="fas fa-layer-group fa-3x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light border-0 d-flex align-items-center justify-content-between">
                    <a class="small text-primary stretched-link text-decoration-none fw-bold" asp-controller="Category" asp-action="Index">Detaylar</a>
                    <div class="small text-primary"><i class="fas fa-chevron-right"></i></div>
                </div>
            </div>
        </div>

        <!-- News Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card bg-white text-dark h-100 shadow-sm border-0 border-start border-5 border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-uppercase fw-bold text-success small mb-1">Haberler</div>
                            <div class="h2 mb-0 fw-bold">@ViewBag.TotalNews</div>
                            <div class="small text-muted mt-1">
                                <i class="fas fa-globe text-success me-1"></i>@ViewBag.PublishedNews Yayında
                            </div>
                        </div>
                        <div class="text-success opacity-25">
                            <i class="fas fa-newspaper fa-3x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light border-0 d-flex align-items-center justify-content-between">
                    <a class="small text-success stretched-link text-decoration-none fw-bold" asp-controller="News" asp-action="Index">Detaylar</a>
                    <div class="small text-success"><i class="fas fa-chevron-right"></i></div>
                </div>
            </div>
        </div>

        <!-- Users Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card bg-white text-dark h-100 shadow-sm border-0 border-start border-5 border-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-uppercase fw-bold text-warning small mb-1">Kullanıcılar</div>
                            <div class="h2 mb-0 fw-bold">@ViewBag.TotalUsers</div>
                            <div class="small text-muted mt-1">
                                <i class="fas fa-user-check text-success me-1"></i>Aktif
                            </div>
                        </div>
                        <div class="text-warning opacity-25">
                            <i class="fas fa-users fa-3x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light border-0 d-flex align-items-center justify-content-between">
                    <a class="small text-warning stretched-link text-decoration-none fw-bold" asp-controller="User" asp-action="Index">Detaylar</a>
                    <div class="small text-warning"><i class="fas fa-chevron-right"></i></div>
                </div>
            </div>
        </div>

        <!-- Quick Actions Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white h-100 shadow-sm border-0">
                <div class="card-body d-flex flex-column justify-content-center align-items-center text-center">
                    <div class="mb-3">
                        <i class="fas fa-bolt fa-3x text-white-50"></i>
                    </div>
                    <h5 class="card-title fw-bold">Hızlı İşlemler</h5>
                    <div class="d-grid gap-2 w-100 mt-2">
                        <a href="@Url.Action("Add", "News")" class="btn btn-light btn-sm fw-bold text-primary">
                            <i class="fas fa-plus me-1"></i>Haber Ekle
                        </a>
                        <a href="@Url.Action("Add", "Category")" class="btn btn-outline-light btn-sm fw-bold">
                            <i class="fas fa-plus me-1"></i>Kategori Ekle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts & Recent News Row -->
    <div class="row">
        <!-- Charts Column -->
        <div class="col-xl-6">
            <div class="card mb-4 shadow-sm border-0">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                    <h5 class="fw-bold text-dark"><i class="fas fa-chart-pie me-2 text-primary"></i>İçerik Analizi</h5>
                </div>
                <div class="card-body">
                    <canvas id="statusChart" width="100%" height="50"></canvas>
                </div>
            </div>
            
            <div class="card mb-4 shadow-sm border-0">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                    <h5 class="fw-bold text-dark"><i class="fas fa-chart-bar me-2 text-primary"></i>Veri Dağılımı</h5>
                </div>
                <div class="card-body">
                    <canvas id="contentChart" width="100%" height="50"></canvas>
                </div>
            </div>
        </div>

        <!-- Recent News Column -->
        <div class="col-xl-6">
            <div class="card mb-4 shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold text-dark"><i class="fas fa-history me-2 text-primary"></i>Son Eklenenler</h5>
                    <a asp-controller="News" asp-action="Index" class="btn btn-sm btn-outline-primary">Tümünü Gör</a>
                </div>
                <div class="card-body p-0">
                    @if (ViewBag.RecentNews != null && ViewBag.RecentNews.Count > 0)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var news in ViewBag.RecentNews)
                            {
                                <div class="list-group-item border-0 border-bottom p-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0 me-3">
                                            @if (!string.IsNullOrEmpty(news.ImageUrl))
                                            {
                                                <img src="@news.ImageUrl" alt="@news.Title" class="rounded" style="width: 60px; height: 60px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="bg-light rounded d-flex align-items-center justify-content-center text-muted" style="width: 60px; height: 60px;">
                                                    <i class="fas fa-image fa-lg"></i>
                                                </div>
                                            }
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1 fw-bold text-dark">@news.Title</h6>
                                            <div class="d-flex align-items-center small text-muted">
                                                <span class="badge bg-light text-dark border me-2">@news.Category?.Name</span>
                                                <i class="far fa-clock me-1"></i> @news.PublishDate.ToString("dd.MM.yyyy HH:mm")
                                            </div>
                                        </div>
                                        <div class="ms-3">
                                            <a href="@Url.Action("Update", "News", new { id = news.Id })" class="btn btn-light btn-sm text-primary" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="fas fa-inbox fa-3x mb-3 opacity-50"></i>
                            <p>Henüz haber eklenmemiş.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Global Chart Defaults
        Chart.defaults.global.defaultFontFamily = '-apple-system,system-ui,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif';
        Chart.defaults.global.defaultFontColor = '#292b2c';

        // İçerik Dağılımı Grafiği
        var ctx1 = document.getElementById('contentChart').getContext('2d');
        var contentChart = new Chart(ctx1, {
            type: 'bar',
            data: {
                labels: ['Kategoriler', 'Haberler', 'Kullanıcılar'],
                datasets: [{
                    label: 'Toplam Kayıt',
                    data: [@ViewBag.TotalCategories, @ViewBag.TotalNews, @ViewBag.TotalUsers],
                    backgroundColor: [
                        'rgba(13, 110, 253, 0.8)',
                        'rgba(25, 135, 84, 0.8)',
                        'rgba(255, 193, 7, 0.8)'
                    ],
                    borderColor: [
                        'rgb(13, 110, 253)',
                        'rgb(25, 135, 84)',
                        'rgb(255, 193, 7)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true,
                            stepSize: 1
                        },
                        gridLines: {
                            display: true
                        }
                    }],
                    xAxes: [{
                        gridLines: {
                            display: false
                        }
                    }]
                },
                legend: {
                    display: false
                }
            }
        });

        // Durum Analizi Grafiği
        var ctx2 = document.getElementById('statusChart').getContext('2d');
        var statusChart = new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: ['Aktif Kategoriler', 'Pasif Kategoriler', 'Yayında Haberler', 'Taslak Haberler'],
                datasets: [{
                    data: [
                        @ViewBag.ActiveCategories,
                        @(ViewBag.TotalCategories - ViewBag.ActiveCategories),
                        @ViewBag.PublishedNews,
                        @(ViewBag.TotalNews - ViewBag.PublishedNews)
                    ],
                    backgroundColor: [
                        '#198754', // Success
                        '#6c757d', // Secondary
                        '#0d6efd', // Primary
                        '#ffc107'  // Warning
                    ],
                    hoverBackgroundColor: [
                        '#157347',
                        '#5c636a',
                        '#0b5ed7',
                        '#ffca2c'
                    ],
                    hoverBorderColor: "rgba(234, 236, 244, 1)",
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                legend: {
                    position: 'bottom',
                    labels: {
                        boxWidth: 12
                    }
                },
                cutoutPercentage: 70
            }
        });
    </script>
}
