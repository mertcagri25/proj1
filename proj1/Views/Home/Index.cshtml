@model proj1.Models.HomeViewModel
@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Slider Section -->
<div class="container-fluid p-0 mb-5">
    @if (Model.SliderNews.Any())
    {
        <div id="newsCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                @for (int i = 0; i < Model.SliderNews.Count; i++)
                {
                    <button type="button" data-bs-target="#newsCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
                }
            </div>
            <div class="carousel-inner">
                @for (int i = 0; i < Model.SliderNews.Count; i++)
                {
                    var item = Model.SliderNews[i];
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://placehold.co/1200x500?text=Haber+Gorseli" : item.ImageUrl)" class="d-block w-100" alt="@item.Title" style="height: 500px; object-fit: cover; filter: brightness(0.7);">
                        <div class="carousel-caption d-none d-md-block text-start">
                            <span class="badge bg-primary mb-2">@item.Category?.Name</span>
                            <h2 class="display-5 fw-bold">@item.Title</h2>
                            <p class="lead">@(item.Content.Length > 150 ? item.Content.Substring(0, 150) + "..." : item.Content)</p>
                            <a href="#" class="btn btn-light btn-lg mt-2">Haberi Oku</a>
                        </div>
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#newsCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Önceki</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#newsCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Sonraki</span>
            </button>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center m-5">
            Henüz yayınlanmış manşet haber bulunmuyor.
        </div>
    }
</div>

<div class="container">
    <div class="row">
        <!-- Main Content: Latest News -->
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
                <h3 class="fw-bold text-dark"><i class="fas fa-newspaper me-2 text-primary"></i>Son Haberler</h3>
            </div>

            @if (Model.LatestNews.Any())
            {
                <div class="row">
                    @foreach (var item in Model.LatestNews)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 shadow-sm border-0 hover-card">
                                <div class="position-relative">
                                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://placehold.co/600x400?text=Haber" : item.ImageUrl)" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                                    <span class="position-absolute top-0 end-0 badge bg-danger m-2">@item.Category?.Name</span>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold">
                                        <a href="#" class="text-decoration-none text-dark stretched-link">@item.Title</a>
                                    </h5>
                                    <p class="card-text text-muted small mb-3">
                                        <i class="far fa-clock me-1"></i> @item.PublishDate.ToString("dd MMMM yyyy HH:mm")
                                    </p>
                                    <p class="card-text text-secondary flex-grow-1">
                                        @(item.Content.Length > 100 ? item.Content.Substring(0, 100) + "..." : item.Content)
                                    </p>
                                </div>
                                <div class="card-footer bg-white border-top-0 pb-3">
                                    <small class="text-primary fw-bold">Devamını Oku <i class="fas fa-arrow-right ms-1"></i></small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    Henüz başka haber eklenmemiş.
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Categories Widget -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                    <h5 class="fw-bold"><i class="fas fa-list me-2 text-primary"></i>Kategoriler</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @if (Model.Categories.Any())
                        {
                            foreach (var category in Model.Categories)
                            {
                                <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center border-0 px-0">
                                    @category.Name
                                    <span class="badge bg-light text-dark rounded-pill">@category.News?.Count(n => n.IsPublished)</span>
                                </a>
                            }
                        }
                        else
                        {
                            <p class="text-muted">Kategori bulunamadı.</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Subscribe Widget (Static) -->
            <div class="card shadow-sm border-0 bg-light mb-4">
                <div class="card-body p-4 text-center">
                    <i class="fas fa-envelope-open-text fa-3x text-primary mb-3"></i>
                    <h5 class="card-title fw-bold">Bültene Abone Olun</h5>
                    <p class="card-text text-muted small">En son haberlerden anında haberdar olmak için e-bültenimize kayıt olun.</p>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="E-posta adresiniz" aria-label="E-posta adresiniz">
                        <button class="btn btn-primary" type="button">Kayıt Ol</button>
                    </div>
                </div>
            </div>
            
            <!-- Social Media Widget (Static) -->
             <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                    <h5 class="fw-bold">Bizi Takip Edin</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex gap-2">
                        <a href="#" class="btn btn-outline-primary flex-grow-1"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="btn btn-outline-info flex-grow-1"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="btn btn-outline-danger flex-grow-1"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="btn btn-outline-dark flex-grow-1"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
    .carousel-caption {
        background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
        bottom: 0;
        left: 0;
        right: 0;
        padding: 2rem;
        width: 100%;
    }
</style>

