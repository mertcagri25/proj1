@using proj1.Constants
@{
    ViewData["Title"] = "Şifre Değiştir";
    bool isAdmin = User.IsInRole(Roles.Admin);
    Layout = isAdmin ? "~/Views/Shared/_LayoutAdmin.cshtml" : "~/Views/Shared/_Layout.cshtml";
}

<div class="@(isAdmin ? "container-fluid px-4" : "container mt-5")">
    @if(isAdmin) {
        <h1 class="mt-4">Şifre Değiştir</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Ana Sayfa</a></li>
            <li class="breadcrumb-item active">Şifre Değiştir</li>
        </ol>
    } else {
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                <li class="breadcrumb-item active" aria-current="page">Şifre Değiştir</li>
            </ol>
        </nav>
    }

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg mt-4">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Şifre Güncelleme</h3></div>
                <div class="card-body">
                    <form asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-floating mb-3">
                            <input class="form-control" id="currentPassword" name="currentPassword" type="password" placeholder="Mevcut Şifre" required />
                            <label for="currentPassword">Mevcut Şifre</label>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-control" id="newPassword" name="newPassword" type="password" placeholder="Yeni Şifre" required minlength="8" />
                                    <label for="newPassword">Yeni Şifre</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-control" id="confirmNewPassword" name="confirmNewPassword" type="password" placeholder="Yeni Şifre (Tekrar)" required minlength="8" />
                                    <label for="confirmNewPassword">Yeni Şifre (Tekrar)</label>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 mb-0">
                            <div class="d-grid"><button class="btn btn-primary btn-block" type="submit">Değişiklikleri Kaydet</button></div>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small">
                        @if(isAdmin) {
                            <a asp-controller="Admin" asp-action="Index">Ana Sayfaya Dön</a>
                        } else {
                            <a asp-controller="Home" asp-action="Index">Ana Sayfaya Dön</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
