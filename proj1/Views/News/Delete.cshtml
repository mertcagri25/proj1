@model proj1.Models.News

@{
    ViewData["Title"] = "Haber Sil";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 text-danger">Haber Sil</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Ana Sayfa</a></li>
        <li class="breadcrumb-item"><a asp-controller="News" asp-action="Index">Haberler</a></li>
        <li class="breadcrumb-item active">Sil</li>
    </ol>

    <div class="alert alert-danger" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        Bu haberi silmek istediğinize emin misiniz? Bu işlem geri alınamaz.
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-info-circle me-1"></i>
            Haber Detayları
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Başlık:</dt>
                <dd class="col-sm-10">@Model.Title</dd>

                <dt class="col-sm-2">Kategori:</dt>
                <dd class="col-sm-10">@Model.Category?.Name</dd>

                <dt class="col-sm-2">Tarih:</dt>
                <dd class="col-sm-10">@Model.PublishDate.ToString("dd.MM.yyyy")</dd>

                <dt class="col-sm-2">Durum:</dt>
                <dd class="col-sm-10">
                    @if(Model.IsPublished)
                    {
                        <span class="badge bg-success">Yayında</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Taslak</span>
                    }
                </dd>
            </dl>
            
            <form asp-action="Delete" method="post" class="d-flex justify-content-end">
                <input type="hidden" asp-for="Id" />
                <a asp-action="Index" class="btn btn-secondary me-2">İptal</a>
                <button type="submit" class="btn btn-danger">Sil</button>
            </form>
        </div>
    </div>
</div>
