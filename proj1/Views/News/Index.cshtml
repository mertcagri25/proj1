@model IEnumerable<proj1.Models.News>

@{
    ViewData["Title"] = "News";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Haberler</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Ana Sayfa</a></li>
        <li class="breadcrumb-item active">Haberler</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-table me-1"></i>
                    Haber Listesi
                </div>
                <a asp-action="Add" class="btn btn-primary btn-sm"><i class="fas fa-plus me-1"></i> Yeni Ekle</a>
            </div>
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Resim</th>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Tarih</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Resim</th>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Tarih</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var news in Model)
                    {
                        <tr>
                            <td>@news.Id</td>
                            <td>
                                @if(!string.IsNullOrEmpty(news.ImageUrl))
                                {
                                    <img src="@news.ImageUrl" alt="News Image" style="width: 50px; height: 50px; object-fit: cover;" class="rounded" />
                                }
                                else
                                {
                                    <span class="text-muted">Yok</span>
                                }
                            </td>
                            <td>@news.Title</td>
                            <td>@news.Category?.Name</td>
                            <td>@news.PublishDate.ToString("dd.MM.yyyy")</td>
                            <td>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="statusSwitch_@news.Id" 
                                           @(news.IsPublished ? "checked" : "") 
                                           onchange="toggleNewsStatus(@news.Id)">
                                    <label class="form-check-label" for="statusSwitch_@news.Id">
                                        <span id="statusLabel_@news.Id" class="badge @(news.IsPublished ? "bg-success" : "bg-secondary")">
                                            @(news.IsPublished ? "Yayında" : "Taslak")
                                        </span>
                                    </label>
                                </div>
                            </td>
                            <td>
                                <a asp-action="Update" asp-route-id="@news.Id" class="btn btn-warning btn-sm text-white"><i class="fas fa-edit"></i> Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@news.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    function toggleNewsStatus(id) {
        fetch('/News/ToggleStatus/' + id, {
            method: 'POST'
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Update Label
                const label = document.getElementById('statusLabel_' + id);
                if (data.isPublished) {
                    label.className = 'badge bg-success';
                    label.innerText = 'Yayında';
                } else {
                    label.className = 'badge bg-secondary';
                    label.innerText = 'Taslak';
                }
                
                // Show Toast
                Toast.fire({
                    icon: 'success',
                    title: data.message
                });
            } else {
                Toast.fire({
                    icon: 'error',
                    title: 'Bir hata oluştu.'
                });
            }
        })
        .catch(error => {
            console.error('Error:', error);
            Toast.fire({
                icon: 'error',
                title: 'Bir hata oluştu.'
            });
        });
    }
</script>
