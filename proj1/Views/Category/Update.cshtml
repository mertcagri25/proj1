@model proj1.Models.Category

@{
    ViewData["Title"] = "Kategori Düzenle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Kategori Düzenle</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Ana Sayfa</a></li>
        <li class="breadcrumb-item"><a asp-controller="Category" asp-action="Index">Kategoriler</a></li>
        <li class="breadcrumb-item active">Düzenle</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-edit me-1"></i>
            Kategori Bilgileri
        </div>
        <div class="card-body">
            <form asp-action="Update" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Kategori Adı</label>
                    <input asp-for="Name" class="form-control" placeholder="Kategori adını giriniz..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive" id="isActiveCheck">
                    <label class="form-check-label" for="isActiveCheck">
                        Aktif mi?
                    </label>
                </div>
                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">İptal</a>
                    <button type="submit" class="btn btn-warning text-white">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
