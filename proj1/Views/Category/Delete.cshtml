@model proj1.Models.Category

@{
    ViewData["Title"] = "Kategori Sil";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 text-danger">Kategori Sil</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Ana Sayfa</a></li>
        <li class="breadcrumb-item"><a asp-controller="Category" asp-action="Index">Kategoriler</a></li>
        <li class="breadcrumb-item active">Sil</li>
    </ol>

    <div class="alert alert-danger" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        Bu kategoriyi silmek istediğinize emin misiniz? Bu işlem geri alınamaz.
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-info-circle me-1"></i>
            Kategori Detayları
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Kategori Adı:</dt>
                <dd class="col-sm-10">@Model.Name</dd>

                <dt class="col-sm-2">Durum:</dt>
                <dd class="col-sm-10">
                    @if(Model.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Pasif</span>
                    }
                </dd>
            </dl>
            
            <form asp-action="Delete" method="post" class="d-flex justify-content-end">
                <input type="hidden" asp-for="Id" />
                <a asp-action="Index" class="btn btn-secondary me-2">İptal</a>
                <button type="submit" class="btn btn-danger">Sil</button>
            </form>
        </div>
    </div>
</div>
